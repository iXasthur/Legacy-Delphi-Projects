program lab1_additional;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;




function digitsAreEqual(num1, num2: Integer):boolean;
var
  s1, s2: string;
  i: integer;
begin
  digitsAreEqual:= false;
  s1:=IntToStr(num1);
  s2:=IntToStr(num2);

  for i := 1 to length(s1) do
  begin
    if pos(s1[i],s2)>0 then delete(s2, pos(s1[i],s2), 1);
  end;

  if length(s2)=0 then digitsAreEqual:= true;
end;



function calcSumOfDigits(num :Integer):Integer;
var
  sum: Integer;
begin
  sum:=0;
  repeat
    sum := sum + (num mod 10);
    num := num div 10
  until num = 0;

  calcSumOfDigits:=sum;
end;




function lengthOfNum(num :Integer):Integer;
var
  length: Integer;
begin
  length:=0;
   repeat
      length:=length + 1;
      num:= num div 10;
   until num = 0;

   lengthOfNum:=length
end;




var
  num1, num2, numLength,sumOfDigits1, sumOfDigits2 :Integer;

begin
  num1:= 9765;
  num2:= 7659;

  writeln(calcSumOfDigits(num1));
  writeln(lengthOfNum(num1));

  writeln(digitsAreEqual(num1,num2));









  writeln('Press <Enter> to exit');
  readln;
end.

program lab1_additional;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;





function calcSumOfDigits(num :Integer):Integer;
var
  sum: Integer;
begin
  sum:=0;
  repeat
    sum := sum + (num mod 10);
    num := num div 10
  until num = 0;

  calcSumOfDigits:=sum;
end;




function lengthOfNum(num :Integer):Integer;
var
  length: Integer;
begin
  length:=0;
   repeat
      length:=length + 1;
      num:= num div 10;
   until num = 0;

   lengthOfNum:=length
end;




var
  num1, num2, numLength,sumOfDigits1, sumOfDigits2 :Integer;

begin
  num1:= 9765;
  num2:= 7659;

  writeln(calcSumOfDigits(num1));
  writeln(lengthOfNum(num1));











  writeln('Press <Enter> to exit');
  readln;
end.

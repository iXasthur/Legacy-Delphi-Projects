program Lab7_1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type
  TString = String;


var
  lastWord, sentence: TString;
begin
  writeln('Input string:');
  readln(sentence);

  writeln;
  sentence:=trim(sentence);
  writeln('Trimmed string:');
  writeln('''',sentence,'''');



  readln;
end.
